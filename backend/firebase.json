{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": [
    {
      "target": "admin",
      "public": "hosting-dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "pc",
      "public": "hosting-pc",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/unity",
          "destination": "/build/index.html"
        },
        {
          "source": "/unity/**",
          "destination": "/build/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/build.wasm.gz",
          "headers": [
            { "key": "Content-Type", "value": "application/wasm" },
            { "key": "content-encoding", "value": "gzip" }
          ]
        },
        {
          "source": "**/build.framework.js.gz",
          "headers": [
            { "key": "Content-Type", "value": "application/javascript" },
            { "key": "content-encoding", "value": "gzip" }
          ]
        },
        {
          "source": "**/build.data.gz",
          "headers": [
            { "key": "Content-Type", "value": "application/octet-stream" },
            { "key": "content-encoding", "value": "gzip" }
          ]
        },
        {
          "source": "build/Build/build.wasm.gz",
          "headers": [
            { "key": "Content-Type", "value": "application/wasm" },
            { "key": "content-encoding", "value": "gzip" }
          ]
        },
        {
          "source": "build/Build/build.framework.js.gz",
          "headers": [
            { "key": "Content-Type", "value": "application/javascript" },
            { "key": "content-encoding", "value": "gzip" }
          ]
        },
        {
          "source": "build/Build/build.data.gz",
          "headers": [
            { "key": "Content-Type", "value": "application/octet-stream" },
            { "key": "content-encoding", "value": "gzip" }
          ]
        }
      ]
    }
  ],
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099,
      "host": "0.0.0.0"
    },
    "functions": {
      "port": 5001,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": 5002,
      "host": "0.0.0.0"
    },
    "storage": {
      "port": 9199,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": true,
      "port": 4000,
      "host": "0.0.0.0"
    },
    "singleProjectMode": true
  }
}
