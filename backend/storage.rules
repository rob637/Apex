rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User-specific uploads (e.g., profile pictures)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Alliance assets
    match /alliances/{allianceId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Game assets (read-only for clients)
    match /game-assets/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via Admin SDK
    }
    
    // Building thumbnails
    match /buildings/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
