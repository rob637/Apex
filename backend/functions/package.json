{
  "name": "@apex-citadels/functions",
  "version": "1.0.0",
  "description": "Apex Citadels Cloud Functions - Backend for spatial anchor persistence and game logic",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts --fix",
    "emulators": "npm run build && firebase emulators:start",
    "emulators:debug": "npm run build && firebase emulators:start --debug",
    "emulators:export": "firebase emulators:export ./emulator-data",
    "emulators:import": "npm run build && firebase emulators:start --import=./emulator-data",
    "seed": "npm run build && node lib/seed.js"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.1.0",
    "googleapis": "^170.0.0",
    "ngeohash": "^0.6.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/ngeohash": "^0.6.7",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "private": true
}
