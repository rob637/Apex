{
  "name": "@apex-citadels/functions",
  "version": "1.0.0",
  "description": "Apex Citadels Cloud Functions - Backend for spatial anchor persistence and game logic",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.1.0",
    "ngeohash": "^0.6.3"
  },
  "devDependencies": {
    "@types/ngeohash": "^0.6.7",
    "@types/node": "^22.0.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0"
  },
  "private": true
}
